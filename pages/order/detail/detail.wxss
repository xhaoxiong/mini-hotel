/* pages/order/detail/detail.wxss */
page {
    background-color: #dddddd;
}

.detail-panel {
    margin: 2px 14px;
    background-color: #ffffff;
}

.detail-input {
    font-size: 14px;
    padding: 7px 15px;
    display: flex;
    color: #495060;
}

.detail-input-special {
    flex-direction: column;
    justify-content: space-between;
}

.detail-input-state {
    font-size: 16px;
    display: flex;
    justify-content: space-between;
}

.detail-panel-bottom {
    font-size: 14px;
    padding: 7px 15px;
    display: flex;
    border: 1px dashed #1a1919;
    background-color: transparent;
    margin-top: 12px;
}

.detail-button-item {
    display: flex;
    justify-content: space-between;
    width: 100%;
}

.detail-button {
    width: 50%;
    border-radius: 0px;
    margin-top: 10px;
    font-size: 16px;
}

.detail-button:after {
    border-radius: 0px;
}

.detail-button-pay {
    background-color: #2d8cf0;
    color: #ffffff;
}

.detail-line {
    width: 100%;
    height: 1px;
    background-color: #E8E8E5;
    margin-top: 2px;
    padding: 0px;
}



